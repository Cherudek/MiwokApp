<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        style="@style/listItemImage"
        tools:src="@drawable/mole" />

    <RelativeLayout
        android:id="@+id/text_play_container"
        style="@style/listItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/text_container"
            style="@style/listItemText"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item1"
                style="@style/listItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/mole" />

            <TextView
                android:id="@+id/list_item2"
                style="@style/listItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item1"
                tools:text="@string/mole_address" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>